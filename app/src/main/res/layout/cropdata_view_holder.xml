<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/cropsId"
        android:weightSum="6"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/riceVariantName"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:text="amon"/>
        <TextView
            android:id="@+id/riceMinWaterLevel"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="12"
            android:paddingLeft="10dp"
            android:layout_gravity="center"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:gravity="center"/>
        <TextView
            android:id="@+id/riceMaxWaterLevel"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="11"
            android:paddingStart="30dp"
            android:layout_gravity="center"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:gravity="center"/>
        <TextView
            android:id="@+id/riceMinMoisture"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="30dp"
            android:text="11"
            android:layout_gravity="center"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:gravity="center"/>
        <TextView
            android:id="@+id/riceMaxMoisture"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="11"
            android:paddingStart="20dp"
            android:layout_gravity="center"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:gravity="center"/>
        <Switch
            android:id="@+id/riceSwitchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"/>
        <!--<RadioGroup
            android:id="@+id/riceRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/riceRadioButton"
                android:layout_width="30dp"
                android:enabled="true"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </RadioGroup>-->

    </LinearLayout>
</androidx.cardview.widget.CardView>